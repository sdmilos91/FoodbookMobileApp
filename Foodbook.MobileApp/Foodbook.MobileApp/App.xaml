<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodbook.MobileApp.App">
	<Application.Resources>

        <ResourceDictionary>
            <Color x:Key="PageBackgroundColor">Yellow</Color>
            <Color x:Key="HeadingColor">#C2C2C2</Color>
            <Color x:Key="PinkColor">#EF5350</Color>
            <Color x:Key="YellowColor">#FFD54F</Color>
            <Color x:Key="NormalTextColor">Blue</Color>
            <Color x:Key="DarkRed">#b61827</Color>
            <Color x:Key="MidleRed">#ef5350</Color>
            <Color x:Key="LightGreen">#F5F5F5</Color>
            <Color x:Key="PageBackground">#ffffff</Color>
            <Color x:Key="LightGray">#eeefee</Color>
            <Color x:Key="InputTextColor">#757575</Color>
            <Color x:Key="PrimaryTextColor">#212121</Color>
            <Color x:Key="ListSeparatorColor">#EEEEEE</Color>



            <Style x:Key="EntryTitleLblStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Small"/>
                <Setter Property="HorizontalTextAlignment" Value="Start"/>
                <Setter Property="TextColor" Value="#212121"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>